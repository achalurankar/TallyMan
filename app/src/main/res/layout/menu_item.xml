<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/item"
    android:background="@drawable/item_container"
    android:elevation="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tally_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/inder"
        android:text="Label"
        android:textColor="@color/label"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tally_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_below="@id/tally_label"
        android:fontFamily="@font/inder"
        android:text="30"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/tally_date_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/inder"
        android:text="from"
        android:layout_below="@id/tally_count"
        android:textColor="@color/label"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/remove_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/danger_btn"
        android:layout_centerVertical="true"
        android:text="Remove"
        android:textColor="@color/danger_text"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginRight="18dp" />

</RelativeLayout>